<%= form_for resource, :url => { :action => 'create' }, :html => { :class => 'form-horizontal' } do |f| %>

  <% if resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(resource.errors.count, "error") %> prohibited this widget from being saved:</h2>
      <ul>
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :widget %>
    <div class="input-group">
      <div class="input-group-addon">
        <i class="fa fa-cogs"></i>
      </div>
    </div>

    <input type="text" value="<%= resource.widget.name %>" class="form-control" disabled />
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <div class="input-group">
      <div class="input-group-addon">
        <i class="fa fa-cogs"></i>
      </div>
    </div>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>

  <%= f.fields_for :fields do |builder| %>
    <%= render 'partials/field_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Field", f, :fields %>

<% end %>
