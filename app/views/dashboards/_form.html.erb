<div class="form-panel">
  <div class="form-panel-header">
    <h3 class="form-panel-title"><%= dashboard.id.nil? ? "New Dashboard" : @dashboard.name %></h3>
  </div>
  <div class="form-panel-body">
    <%= simple_form_for(@dashboard, :wrapper => :horizontal_form) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.association :client %>
        <%= f.input :name %>
        <%= f.input :published, :wrapper => :horizontal_boolean %>
      </div>

      <table class="table table-condensed table-hover table-striped">
        <thead>
          <tr>
            <th class="table-id">#</th>
            <th>Name</th>
            <th>Rand</th>
          </tr>
        </thead>
        <tbody class="form-inputs table-inputs">
          <%= f.simple_fields_for :sections do |builder| %>
            <%= render 'section', f: builder %>
          <% end %>
        </tbody>
      </table>

      <div class="form-actions">
        <div class="col-sm-offset-3 col-sm-9">
          <%= f.button :submit, :class => 'btn-sm' %>
          <%= link_to 'Back', nav_btn[:back], :class => 'btn btn-primary btn-sm' if nav_btn[:back].present? %>
          <%= link_to 'Show', nav_btn[:show], :class => 'btn btn-info btn-sm' if nav_btn[:show].present? %>
        </div>
      </div>

    <% end %>
  </div>
</div>
