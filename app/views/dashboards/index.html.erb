<% title 'Dashboards' %>

<h1>Dashboards</h1>

<table class="table table-condensed table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Client</th>
      <th>Name</th>
      <th>SubDomain</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @dashboards.each do |dashboard| %>
      <tr>
        <th><%= dashboard.client.name %></th>
        <th><%= dashboard.name %></th>
        <th><%= dashboard.subdomain %></th>
        <td><%= link_to 'Show', dashboard %></td>
        <td><%= link_to 'Edit', edit_dashboard_path(dashboard) %></td>
        <td><%= link_to 'Destroy', dashboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dashboard', new_dashboard_path %>
