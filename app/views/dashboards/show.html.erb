<% title @dashboard.name %>

<%= render 'partials/section-header', content_header: { title: 'Dashboard: ' + @dashboard.name, subtitle: 'Details' } %>

<section class="section-content">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title"><%= @dashboard.name %></h3>
        </div>
        <div class="panel-body">
          <div class="horizontal-scroll table-responsive nested-form">
            <table class="table table-condensed table-hover table-striped">
              <thead>
                <tr>
                  <th class="table-id">#</th>
                  <th>Name</th>
                  <th>Rand</th>
                </tr>
              </thead>
              <tbody class="form-inputs table-inputs">
                <% @dashboard.sections.each do |section| %>
                  <tr class="partial-row animatrix fadeIn">
                    <td><%= section.id %></td>
                    <td><%= section.name %></td>
                    <td><%= section.ancestry %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="form-actions">
            <%= link_to 'Edit', edit_dashboard_path(@dashboard), :class => 'btn btn-info btn-sm' %>
            <%= link_to 'Back', dashboards_path, :class => 'btn btn-primary btn-sm' %>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
