<section class="content-sections">
  <h3 class="page-header">
    Listing
  </h3>
  <div class="row">
    <div class="container">
      <table class="table table-condensed table-striped">
        <thead>
          <tr>
            <td>Name</td>
            <td>Description</td>
            <td>Body</td>
            <td>CSS</td>
            <td>Field ID</td>
          </tr>
        </thead>
        <tbody>
          <% @widgets.each do |widget| %>
            <tr>
              <td><%= widget.name %></td>
              <td><%= widget.description %></td>
              <td><%= widget.body %></td>
              <td><%= widget.css %></td>
              <td><%= widget.fields %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>

