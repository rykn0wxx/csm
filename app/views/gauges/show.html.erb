<% title 'Gauges' %>
<section class="content-sections">

  <div class="row">
    <div class="col-lg-12">
      <h4 class="page-header"><%= @gauge.name %></h4>
      <div class="component" style="position:relative; padding-top:9px;">

        <% @gauge.blocks.each do |block| %>
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h4 class="panel-title"><%= block.name %></h4>
            </div>
            <div class="panel-body">
              <p><%= block.content %></p>
              <%= render 'block_form', block: block %>
            </div>
            <div class="panel-footer">
              <a href="#" class="add_field">Add New Field</a>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>

</section>
