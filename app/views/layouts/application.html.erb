<!doctype html>
<html lang="en" class="no-js" ng-app="mud" ng-controller="MudCtrl" ng-cloak="true">
  <head>
  	<meta charset="UTF-8"/>
  	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
  	<meta name="description" content="rykn0wxx" />
  	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, minimal-ui" />
    <title><%= yield(:title) || 'CSM' %></title>

    <%= javascript_tag do %>
      document.documentElement.className = 'js';
    <% end %>

    <%= tag :meta, name: :kohana, action: action_name, controller: controller_name %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <%= yield :head %>

  </head>

  <body class="rykn0wxx <%= controller_name %>">

    <div id="wrapper" class="wrapper">

      <!-- header -->
      <%= render 'partials/header' %>
      <!-- header -->

      <!-- sidebar -->
      <!-- sidebar -->
      <div class="content-wrapper">

        <div class="content">
          <% flash.each do |name, msg| %>
            <div class="alert alert-info alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <%= content_tag :span, msg, :id => "flash_#{name}" %>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </div>

    </div>

  </body>
</html>
