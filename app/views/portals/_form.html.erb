<div class="slide">
  <div class="blurb">
    <%= content_tag :div, "Portal Form", :class => 'title' %>
    <%= content_tag :div, portal.name, :class => 'sub' %>
  </div>
  <div class="slurp">
    <div class="garl">
      <%= form_for portal, html: { :class => 'form-horizontal', name: 'form_for_portal' } do |f| %>
        <div class="layout-gt-xs-column">

          <div class="form-group">
            <%= f.label :name, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :name, :class => 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label>
                  <%= f.check_box :published %>
                  Publised
                </label>
              </div>
            </div>
          </div>

        </div>
        <div class="form-actions">
          <%= f.submit "Submit", :class => 'md-button md-accent md-hue-1 md-raised pull-right' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
